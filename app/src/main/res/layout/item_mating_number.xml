<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- 왼쪽 동그란 텍스트 -->
    <TextView
        android:id="@+id/circle_text"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_circle_background_white"
        android:gravity="center"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 오른쪽 텍스트 설명 -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="텍스트 설명"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/circle_text"
        app:layout_constraintTop_toTopOf="@id/circle_text"
        app:layout_constraintBottom_toBottomOf="@id/circle_text"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
